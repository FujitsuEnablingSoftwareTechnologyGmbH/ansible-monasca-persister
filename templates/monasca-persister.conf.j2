# Startup script for the monasca-persister

description "Monasca Persister java app"
start on runlevel [2345]

console log
respawn

setgid monasca
setuid persister
exec /usr/bin/java -Dfile.encoding=UTF-8 -Xmx8g -cp {{monasca_jar_dir}}/monasca-persister.jar:{{monasca_jar_dir}}/vertica/vertica_jdbc.jar monasca.persister.MonPersisterApplication server {{monasca_conf_dir}}/persister-config.yml
